package components

templ AddTodo() {
	<form
		method="POST"
		action="/todos"
		hx-post="/todos"
		hx-target="#todos"
		hx-swap="outerHTML"
		class="flex-1 flex flex-row min-w-0  items-center gap-2"
		hx-on::after-request="this.reset()"
		hx-indicator="#indicator"
		hx-disabled-elt="this"
	>
		<span>Add Todo</span>
		<input
			type="text"
			placeholder="Add new todo "
			class="input input-bordered min-w-0 flex-1 "
			name="description"
		/>
		<button
			type="submit"
			class="btn btn-primary  "
		>
			Add
			<span id="indicator" class="loading loading-spinner htmx-indicator"></span>
		</button>
	</form>
}
