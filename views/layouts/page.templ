package layouts

templ Page(title string, content templ.Component) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<title>{ title }</title>
			<link rel="stylesheet" href="/assets/css/tailwind.css"/>
		</head>
		<body>
			<main class=" flex flex-col items-center h-full min-h-screen bg-base-300">
				<section class=" w-full px-4 md:w-3/4 lg:w-1/2">
					if content!= nil {
						@content
					}
					{ children... }
				</section>
			</main>
		</body>
	</html>
}
